{
  "expo": {
    "name": "SalesTalk",
    "description": "SalesTalk Mobile Application",
    "slug": "mobile",
    "privacy": "public",
    "sdkVersion": "31.0.0",
    "platforms": ["ios", "android"],
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#5a9f4d"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.getsalestalk.mobile",
      "buildNumber": "2.0",
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Get a better experience in SalesTalk based on your location",
        "NSLocationAlwaysUsageDescription": "Get a better experience in SalesTalk based on your location"
      }
    },
    "android": {
      "package": "com.getsalestalk.mobile",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#5a9f4d"
      }
    }
  }
}
